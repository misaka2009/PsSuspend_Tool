<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Style x:Key="DefualtAlign" TargetType="{x:Type FrameworkElement}"  >
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>
    <Style x:Key="TextBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource DefualtAlign}"  >
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style x:Key="PIDInput" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBox}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="30"/>
    </Style>
    <Style x:Key="NameInput" TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBox}" >
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="30"/>
    </Style>
    <Style x:Key="HintText" TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="60"/>
    </Style>
    <Style x:Key="Button" TargetType="{x:Type Button}" BasedOn="{StaticResource DefualtAlign}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="30"/>
    </Style>
</ResourceDictionary>