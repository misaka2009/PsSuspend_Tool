<Window x:Class="PsSuspend_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PsSuspend_Tool"
        mc:Ignorable="d"
        Title="PsSuspend_GUI" Height="600" Width="450">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>

        <StackPanel HorizontalAlignment="Left" >
            <StackPanel x:Name="MainPanal"  VerticalAlignment="Top" HorizontalAlignment="Left"  >
                <TextBlock Style="{StaticResource HintText}" Text="PID              Name" Width="200" HorizontalAlignment="Left"/>
                
            </StackPanel>


            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Left" VerticalAlignment="Bottom"  >
                <Button x:Name="Add" Style="{StaticResource Button}" >+</Button>
                <Button x:Name="Remove" Style="{StaticResource Button}" >-</Button>
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
